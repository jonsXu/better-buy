<!--pages/goods_detail/index.wxml-->
<view class="goods-detail">
  <view class="swiper-pic">
    <swiper indicator-dots="{{true}}">
      <swiper-item wx:for="{{goodsObj.pics}}" wx:key="pics_id">
        <image mode="widthFix" src="{{item.pics_sma_url}}"></image>
      </swiper-item>
    </swiper>
  </view>
  <view class="goods-msg">
    <view class="goods-price">￥ 6075 </view>
    <view class="goods-msg-text">
      <view class="goods-msg-name">张三丰</view>
      <view class="goods-msg-line"></view>
      <view class="goods-msg-save"></view>
    </view>
  </view>
  <view class="goods-introduce"></view>
</view>
