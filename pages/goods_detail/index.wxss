.goods-detail {
  position: relative;
  height: 100%;
}
.goods-detail .swiper-pic swiper {
  height: 680rpx;
}
.goods-detail .goods-msg .goods-price {
  color: red;
  font-weight: 700;
  font-size: 30rpx;
}
.goods-detail .goods-msg .goods-msg-text {
  overflow: hidden;
  padding: 5rpx;
}
.goods-detail .goods-msg .goods-msg-text .goods-msg-name {
  width: 82%;
  float: left;
}
.goods-detail .goods-msg .goods-msg-text .goods-msg-line {
  width: 0;
  border-left: 1rpx solid red;
  float: left;
  margin: auto 2rpx;
  height: 100%;
}
.goods-detail .goods-msg .goods-msg-text .goods-msg-save {
  width: 13%;
  float: left;
  padding: 9rpx 6rpx;
  box-sizing: border-box;
}
.goods-detail .goods-msg .goods-msg-text .goods-msg-save view {
  display: flex;
  justify-content: center;
}
.goods-detail .goods-introduce {
  height: 2400rpx;
}
.goods-detail .detail-buy {
  width: 100%;
  height: 150rpx;
  position: fixed;
  background: green;
  bottom: 0;
}
