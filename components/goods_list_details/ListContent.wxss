/* components/goods_list_details/ListContent.wxss */
.listDetail {
  width: 100%;
}
.listDetail image {
  height: 100rpx;
}
.listDetail .goodsCard {
  width: 100%;
  margin-bottom: 10rpx;
  padding: 5rpx;
  overflow: hidden;
}
.listDetail .goodsCard .goodImg {
  width: 350rpx;
  float: left;
  display: flex;
  justify-content: center;
  align-items: center;
}
.listDetail .goodsCard .goodImg image {
  width: 80%;
}
.listDetail .goodsCard .goodText {
  float: left;
  margin-left: 10rpx;
  width: 50%;
  padding: 20rpx 0;
}
.listDetail .goodsCard .goodText .goodTitle {
  font-size: 24rpx;
  height: 62rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.listDetail .goodsCard .goodText .goodPrice {
  margin-top: 20rpx;
  color: var(--themeColor);
  font-size: 25rpx;
  font-weight: 700;
}
